<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.dip.oyasirazu.timelogger" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <activity android:name=".TimeLogger"
            android:label="@string/app_name" android:windowSoftInputMode="stateAlwaysHidden|adjustPan" android:icon="@drawable/icon">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailViewer" android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity android:name="org.superdry.util.colorpicker.lib.SuperdryColorPicker"
            android:theme="@style/Theme.AppCompat.Dialog" />
    </application>

</manifest>
